extends layout

block content
    nav
      ul
        li: a(href='/') Accueil
        li: a(href='/catways/add') Ajouter un Catway
    h1= title

    form(action="/catways/" + catway._id + "/update" id='add-catways' method="POST")
        div
            label(for="catwayNumber") Numéro de Pont :
            input(type="text" id="catwayNumber" name="catwayNumber" required value=catway.catwayNumber)
        div
            label(for="type") Type :
            select(id="type" name="type" required)
                option(value="") Choisir un type
                option(value="long", selected=catway.type === 'long') Long
                option(value="short", selected=catway.type === 'short') Court
        div
            label(for="catwayState") Description de l'état du pont :
            textarea(id="catwayState" name="catwayState" value=catway.catwayState)
        div
            button(type="submit") Modifier le Catway