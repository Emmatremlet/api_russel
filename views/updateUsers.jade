extends layout

block content
    nav
      ul
        li: a(href='/') Accueil
        li: a(href='/catways') Liste des catways
        li: a(href='/catways/add') Ajouter un Catway
        li: a(href='/users/' + user._id + '/account') Mon compte
        li: a(href='/logout') Se d√©connecter

    h1= titlePage

    form(action="/users/" + user._id + "/update", id="form", method="POST")
        div
            label(for="name") Nom :
            input(type="name", id="name", name="name", required, value=user.name)
        div
            label(for="email") Email :
            input(type="email", id="email", value=user.email, name="email", required)
        div
            button(type="submit") Modifier les informations